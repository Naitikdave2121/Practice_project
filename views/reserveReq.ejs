<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>show reservation request</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css"
        integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <style>
        form {
            float: right;
        }
    </style>
</head>

<body>
    <%- include("navbar")%>
        <%- include("header")%>
            <%- include("footer")%>
                <div class="page-wrapper" id="main-wrapper" data-layout="vertical" data-navbarbg="skin6"
                    data-sidebartype="full" data-sidebar-position="fixed" data-header-position="fixed">
                    <div
                        class="position-relative overflow-hidden radial-gradient min-vh-100 d-flex align-items-center justify-content-center">
                        <div class="d-flex align-items-center justify-content-center">
                            <div class="row justify-content-center">

                                <div class="card mb-0">
                                    <div class="card-body">
                                        <div class="container">
                                            <form action="">
                                                <input type="text" name="search" id="search"
                                                    placeholder="search here !">
                                                <input type="submit" value="search">
                                            </form>
                                            <% if(approve.length> 0){%>
                                                <div class="alert alert-success">
                                                    <%= approve %>
                                                </div>
                                            <%}%>
                                            <% if(reject.length> 0){%>
                                                    <div class="alert alert-danger">
                                                        <%= reject %>
                                                    </div>
                                             <%}%>
                                            <table class="table table-border text-center shadow">
                                                <tr>
                                                    <th>Name</th>
                                                    <th>Email</th>
                                                    <th>Phone</th>
                                                    <th>Guests</th>
                                                    <th>Date</th>
                                                    <th>Time</th>
                                                    <!-- <th>Message</th> -->
                                                    <th>approval</th>
                                                    <th>reject</th>
                                                </tr>
                                                <% req.forEach((r)=>{ %>
                                                    <tr>
                                                        <td align="center">
                                                            <%=r.name %>
                                                        </td>
                                                        <td align="center">
                                                            <%=r.email %>
                                                        </td>
                                                        <td align="center">
                                                            <%=r.phone %>
                                                        </td>
                                                        <td align="center">
                                                            <%=r.guests %>
                                                        </td>
                                                        <td align="center">
                                                            <%=r.date %>
                                                        </td>
                                                        <td align="center">
                                                            <%=r.time %>
                                                        </td>
                                                        <!-- <td align="center">
                                                            <%=r.message %>
                                                        </td> -->
                                                        <td><a href="/approval/<%=r._id %>" class="btn btn-success" name="approval">approval</a></td>
                                                        <td><a href="/reject/<%=r._id %>" class="btn btn-danger" name="reject">reject</a></td>
                                                    </tr>
                                                    <% }) %>

                                            </table>
                                            <%
                                            for(let j = 1; j<=totalPages; j++){
                                                %>
                                                <a href="?page=<%= j %>"><button class="btn btn-primary"><%= j %></button></a>
                                                <%
                                            }
                                            %>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
</body>

</html>